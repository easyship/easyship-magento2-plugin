/**
 * @var \Goeasyship\Shipping\Block\Admin\Config\Generate $block
 * @var \Magento\Framework\Escaper $escaper
 */
?>
<div id="easyship_<?= $escaper->escapeHtml($block->getElementId()) ?>">
    <div class="flex-container storebackground">
        <div class="statuscontainer">
            <div class="storename">
                <?= $escaper->escapeHtml(__('Store Name')) ?>:
                <strong><?= $escaper->escapeHtml($block->getStore()) ?></strong>
            </div>
            <div class="statusLabel">
                <?= $escaper->escapeHtml(__('Plugin Status')) ?>:
                <?php if ($block->getActived()): ?>
                    <span class="status active"><?= $escaper->escapeHtml(__('activated')) ?></span>
                <?php else: ?>
                    <span class="status deactive"><?= $escaper->escapeHtml(__('disabled')) ?></span>
                <?php endif; ?>
            </div>
        </div>

        <div class="buttoncontainer">
            <?php if (!$block->getActived()): ?>
                <button type="button" class="activatebutton"
                        onclick="postRegistration('<?= $escaper->escapeHtmlAttr($block->getStoreUrl()
                            . "', " . $block->getStoreId()) ?>);">
                    <?= $escaper->escapeHtml(__('ACTIVATE PLUGIN')) ?>
                </button>
            <?php else: ?>
                <button type="button" class="resetbutton"
                        onclick="resetStore('<?= $escaper->escapeHtmlAttr($block->getResetStoreUrl()
                            . "', " . $block->getStoreId()) ?>);">
                    <?= $escaper->escapeHtml(__('RESET STORE SETTINGS')) ?>
                </button>
            <?php endif; ?>
        </div>
    </div>
</div>

<script>
    require([
        'jquery'
    ], function ($) {
        window.postRegistration = function (url, storeId) {
            $.ajax({
                url: url,
                type: 'post',
                data: {store_id: storeId},
                success: function (response) {
                    if (response.error) {
                        $('body').notification('clear')
                            .notification('add', {
                                error: true,
                                message: $.mage.__(response.error),

                                insertMethod: function (message) {
                                    var $wrapper = $('<div/>').html(message);

                                    $('.page-main-actions').after($wrapper);
                                }
                            });
                    } else {
                        window.open(response.redirect_url, "_self");
                    }
                }
            });
        };

        window.resetStore = function (url, storeId) {
            $.ajax({
                url: url,
                type: 'post',
                data: {store_id: storeId},
                success: function (response) {
                    location.reload();
                },
                fail: function () {
                    alert("Error: Fail to reset store. Please try again.");
                }
            });
        }
    });
</script>
